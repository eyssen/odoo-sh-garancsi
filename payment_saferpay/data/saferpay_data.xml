<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <record id="payment_acquirer_saferpay" model="payment.acquirer">
            <field name="name">Saferpay</field>
            <!-- <field name="image_128" type="base64" file="payment_saferpay/static/description/icon.png" /> -->
            <field name="provider">saferpay</field>
            <field name="company_id" ref="base.main_company" />
            <field name="state">test</field>
            <field name="view_template_id" ref="saferpay_acquirer_button" />
            <field name="module_id" ref="base.module_payment_saferpay" />
            <field name="saferpay_username">dummy</field>
            <field name="saferpay_password">dummy</field>
            <field name="saferpay_terminal_id">dummy</field>
            <field name="saferpay_customer_id">dummy</field>
            <field name="payment_icon_ids" eval='[(6, 0, [ref("payment.payment_icon_cc_mastercard"),
                                                        ref("payment.payment_icon_cc_visa"),
                                                        ref("payment.payment_icon_cc_american_express"),
                                                        ref("payment.payment_icon_cc_visa")])]'/>
            <field name="description" type="html">
                <p>
                    A payment gateway to accept online payments via credit cards.
                </p>
                <ul class="list-inline">
                    <li class="list-inline-item"><i class="fa fa-check"/>Online Payment</li>
                    <li class="list-inline-item"><i class="fa fa-check"/>Payment Status Tracking</li>
                </ul>
            </field>
        </record>
    </data>
</odoo>